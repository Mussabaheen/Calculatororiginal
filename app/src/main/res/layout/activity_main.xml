<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.mussabaheenmalik.calc.MainActivity"
    android:weightSum="1">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="add"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text=" " />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/b1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="one"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="two"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:onClick="three"
                android:textSize="30sp" />
            <Button
                android:id="@+id/bplus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="decision"
                android:background="@color/colorPrimary"

                android:text="+"
                android:textSize="30sp" />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <Button
                android:id="@+id/b4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.50"
                android:onClick="four"
                android:text="4"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="five"
                android:text="5"
                android:textSize="30sp"
                android:layout_weight="0.48" />

            <Button
                android:id="@+id/b6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:onClick="six"
                android:textSize="30sp" />
            <Button
                android:id="@+id/bminus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="decision"
                android:background="@color/colorPrimary"
                android:text="-"
                android:textSize="40sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:id="@+id/b7"
                android:onClick="seven"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="30sp"
                android:layout_weight="0.56" />

            <Button
                android:id="@+id/b8"
                android:onClick="eight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="30sp"
                android:layout_weight="0.47" />

            <Button
                android:id="@+id/b9"
                android:layout_width="wrap_content"
                android:onClick="nine"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="30sp" />

            <Button
                android:id="@+id/bmul"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="decision"
                android:background="@color/colorPrimary"
                android:text="*"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/b11"
                android:onClick="zero"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp" />

            <Button
                android:id="@+id/b12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ans"
                android:text="AC"
                android:textSize="30sp" />
            <Button
                android:id="@+id/bdiv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="decision"
                android:background="@color/colorPrimary"
                android:text="/"
                android:textSize="30sp" />


        </LinearLayout>


    </LinearLayout>









</LinearLayout>
